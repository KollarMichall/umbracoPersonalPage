@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using umbracoPersonalPage.lib.Models
@{
    VzdelanieModel vzdelanieModel = new VzdelanieModel();
    vzdelanieModel.ZakladnaSkola = "ZŠ Sedlice";
    vzdelanieModel.StrednaSkola = "SPš Prešov";
    vzdelanieModel.VysokaSkola = "žiadna";
}
<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">VZDELANIE</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">
        <div class="col d-flex align-items-start">
            <div>
                <h4 class="fw-bold mb-0">Základná škola</h4>
                <p>@vzdelanieModel.ZakladnaSkola</p>
            </div>
        </div>
        <div class="col d-flex align-items-start">
            <div>
                <h4 class="fw-bold mb-0">Stredná škola</h4>
                <p>@vzdelanieModel.StrednaSkola</p>
            </div>
        </div>
        <div class="col d-flex align-items-start">
            <div>
                <h4 class="fw-bold mb-0">Vysoká škola</h4>
                <p>@vzdelanieModel.VysokaSkola</p>
            </div>
        </div>

    </div>
</div>
<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom">Kurzy a certifikáty</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">
        @foreach (string item in vzdelanieModel.ZoznamKurzov.zoznamKurzov)
        {
        <div class="col d-flex align-items-start">
            <div>
                <h2 class="fw-bold mb-0">@item</h2>            
            </div>
        </div>
          

        }


    </div>
</div>
