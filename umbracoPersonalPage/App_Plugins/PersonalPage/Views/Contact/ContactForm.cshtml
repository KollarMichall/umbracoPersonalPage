@model umbracoPersonalPage.lib.Models.PersonalPageContactModel
@using umbracoPersonalPage.lib.Util;

@if (TempData["success"] != null)
{
    <p class="big">Ďakujeme za správu.</p>
    <p class="medium">Správa bola úspešne odoslaná.<br />Ozveme sa čoskoro.</p>
}
else
{
    <h3>Napíš mi správu</h3>
    using (Html.BeginUmbracoForm<umbracoPersonalPage.lib.Controllers.ContactController>("HandleFormSubmit", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="osobnastranka-form">
            <div class="row">
                <div class="col-md-12">
                    @Html.AntiForgeryToken()
                    <div class="form-item">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.Text)
                        @Html.TextAreaFor(m => m.Text, new { @class = "form-control", style = "height:150px" })
                        @Html.ValidationMessageFor(m => m.Text)
                    </div>
                    <div class="api-password-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="api-password-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
            </div>
            <div class="row submit">
                <div class="col-md-12">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-primary btn-lg">Odoslať správu</a>
                    <input type="submit" id="submitButton" class="visually-hidden" />
                </div>
            </div>
        </div>
    }
}